package com.cmc.evaluacion.fase2.servicios;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;

import com.cmc.evaluacion.fase2.entidades.Cartera;

public class AdminClientes {
	private Logger logger = LogManager.getLogger(AdminClientes.class);
	
	public static Cartera armarCartera(String rutaArchivo){
		Cartera cartera = new Cartera();
		File file = new File(rutaArchivo);
		BufferedReader br;
		FileReader fr;
		String leerLineas;
		String[] datos;
		try {
			fr = new FileReader(file);
			br = new BufferedReader(fr);
			while((leerLineas=br.readLine()) != null){
				datos = leerLineas.split(",");
				 cartera.agregarCliente(new Cliente(datos[0],datos[1],datos[2]));
			}
			
		} catch (FileNotFoundException e) {
			// TODO Error al no existir el archivo
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Error al leer el archivo
			e.printStackTrace();
		}
		
		return null;
	}
	
}
