package com.cmc.commons.util;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

import com.cmc.excepciones.EvaluacionException;

public class DateUtil {
	
	private final static String PATRON = "yyyy/MM/dd";
	
	public static Date convertir(String date){
		SimpleDateFormat formato = new SimpleDateFormat(PATRON);
		Date nuevoFormato = null;
		try {
			nuevoFormato = formato.parse(date);
		} catch (ParseException e) {
			//Ha ocurrido un problema al momento de convertir la fecha
			System.out.println("Ha ocurrido un problema al momento de convertir la fecha");
		}	catch (EvaluacionException e){
			throw new EvaluacionException("El valor ingresado es null");
		}
		
		return nuevoFormato;
	} 
}
