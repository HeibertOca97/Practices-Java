package com.cmc.rest.commons;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.Date;

public class DateUtil {

	public static String convertir(Date date) {
		String strDateFormat = "dd/MM/yyyy HH:mm:ss";
		SimpleDateFormat formato = new SimpleDateFormat(strDateFormat);
		return formato.format(date);
	}
	
	public static Date convertirDate(String date) {
		String strDateFormat = "MM/dd/yyyy";
		SimpleDateFormat formato = new SimpleDateFormat(strDateFormat);
		Date fechaFormateada = null;
		try {
			fechaFormateada = formato.parse(date);
		} catch (ParseException e) {
			System.out.println("Ha ocurrido un error al convertir la fecha");
			e.printStackTrace();
		}
		return fechaFormateada;
	}
}
