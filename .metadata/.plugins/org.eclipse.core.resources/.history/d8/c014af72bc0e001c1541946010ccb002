package com.cmc.evaluacion.fase2.servicios;

import java.io.BufferedReader;
import java.io.File;
import java.io.FileNotFoundException;
import java.io.FileReader;
import java.io.IOException;

import org.apache.logging.log4j.LogManager;
import org.apache.logging.log4j.Logger;

import com.cmc.evaluacion.fase2.entidades.Cartera;
import com.cmc.evaluacion.fase2.entidades.Cliente;
import com.cmc.excepciones.EvaluacionException;

public class AdminClientes {
	private Logger logger = LogManager.getLogger(AdminClientes.class);

	public static Cartera armarCartera(String rutaArchivo) throws EvaluacionException {
		Cartera cartera = new Cartera();
		File file = new File(rutaArchivo);
		BufferedReader br;
		FileReader fr;
		String leerLineas;
		String[] datos;
		try {
			fr = new FileReader(file);
			br = new BufferedReader(fr);
			while ((leerLineas = br.readLine()) != null) {
				datos = leerLineas.split(",");
				cartera.agregarCliente(new Cliente(datos[0], datos[1], datos[2]));
			}
		} catch (FileNotFoundException e) {
			// TODO Error al no existir el archivo
			logger.error("", rutaArchivo);
			throw new EvaluacionException("No existe el archivo en la ruta: " + rutaArchivo);
		} catch (IOException e) {
			// TODO Error al leer el archivo
			throw new EvaluacionException("Hubo un error al intentar leer el archivo con ruta a: " + rutaArchivo);
		} finally{
			br.close();
			
			fr.close();
		}

		return cartera;
	}

}
